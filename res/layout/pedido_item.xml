<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >
        
    <LinearLayout
            android:id="@+id/back"
            android:tag="back"
            style="@style/ListBackContent" >

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/example_row_b_action_1"
                style="@style/ListButtonAction"
                android:text="Eliminar"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/example_row_b_action_2"
                style="@style/ListButtonAction"
                android:text="Editar"/>

        <!-- <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/example_row_b_action_3"
                style="@style/ListButtonAction"
                android:text="uninstall"/> -->

    </LinearLayout>
    

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:id="@+id/front"
        android:tag="front"
        style="@style/ListFrontContent" >
	
	    <TextView
	        android:id="@+id/txtProducto"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="Medium Text"
	        android:paddingLeft="3dp"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/txtCantidad"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right|center_vertical"
	        android:minWidth="80dp"
	        android:text="Medium Text"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/txtUnitario"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right|center_vertical"
	        android:minWidth="110dp"
	        android:text="Medium Text"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/txtTotal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="right|center_vertical"
	        android:minWidth="130dp"
	        android:text="Medium Text"
	        android:paddingRight="3dp"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	</LinearLayout>
</FrameLayout>
